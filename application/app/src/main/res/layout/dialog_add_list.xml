<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:hint="제목" />

        <Button
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/cDismissBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="okBtn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="content" />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필수 입력 사항"
        android:textSize="13dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/containerMemNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원수 : "
            android:textSize="11dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cMemberNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="member number"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/containerPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포지션 : "
            android:textSize="11dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/cPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="position"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containterDudate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마감일 : "
            android:textSize="11dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/projectDuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="dueDate"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerTerm"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기간 : "
            android:textSize="11dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contestTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="dueDate"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerLink"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크 : "
            android:textSize="11dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contestLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="dueDate"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/colorPrimary"
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NO"/>
        <Button
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="YES"/>
    </LinearLayout>

</LinearLayout>

