<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.sinabro.daemmunity.fragments.MyPageFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/profile_background1"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_add_black_24dp"
                app:fabSize="normal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/profile_icon" />

                    <RelativeLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/profile_img"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="8dp"
                            android:paddingHorizontal="8dp"
                            android:text="홍길동"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/profile_kind_button"
                            android:padding="4dp"
                            android:paddingHorizontal="8dp"
                            android:text=" hongildong@naver.com"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/linear"
                    android:layout_weight="6"
                    android:background="#FFECB3"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:elevation="16dp">

                            <RelativeLayout
                                android:id="@+id/changeProfile"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="30dp"
                                    android:text="프로필 수정"
                                    android:textSize="20dp" />

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/right_direction_button"></ImageButton>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:elevation="16dp">

                            <RelativeLayout
                                android:id="@+id/changePw"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="30dp"
                                    android:text="비밀번호 수정"
                                    android:textSize="20dp" />

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/right_direction_button"></ImageButton>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:elevation="16dp">

                            <RelativeLayout
                                android:id="@+id/loginLayout"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="30dp"
                                    android:text="로그인"
                                    android:textSize="20dp" />

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/right_direction_button"></ImageButton>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
