<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFF8E1"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:src="@drawable/damunity_logo"
           />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/id"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="User name"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#795548"
                android:theme="@style/MyEditText" />


            <EditText
                android:id="@+id/password"
                android:layout_width="280dp"
                android:layout_below="@+id/id"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="Password"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#795548"
                android:theme="@style/MyEditText" />

            <CheckBox
                android:layout_marginTop="8dp"
                android:layout_below="@id/password"
                android:id="@+id/cb_login_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/password"
                android:layout_centerHorizontal="true"
                android:text="Remember me"
                android:textColor="@android:color/black"
                android:buttonTint="#795548" />


            <Button
                android:id="@+id/loginButton"
                android:layout_width="280dp"
                android:layout_below="@+id/cb_login_remember"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button"
                android:text="LOGIN"
                android:textColor="#FFF"
                android:textSize="12sp" />

            <TextView
                android:layout_below="@id/loginButton"
                android:text="Forgot password?"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get registered in Community now!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#795548"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

</LinearLayout>