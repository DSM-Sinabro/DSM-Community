<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#BCAAA4</item>
        <item name="colorControlActivated">#795548</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@color/colorPrimary</item>
    </style>

    <style name="SplashStyle" parent="AppTheme">
        <item name="android:background">@drawable/back_splash</item>
    </style>
</resources>

